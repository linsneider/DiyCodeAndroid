<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/common_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_s"
    android:background="@drawable/bg_recycler"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_s"
                android:background="@drawable/bg_press"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="@string/dot"
                android:textColor="@color/color_62646c"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:textColor="@color/color_62646c"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="@string/dot"
                android:textColor="@color/color_62646c"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:textColor="@color/color_62646c"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_edit_reply"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_press"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/ic_pencil"/>

                <ImageView
                    android:id="@+id/btn_like_reply"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:background="@drawable/bg_press"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/ic_like"/>

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:textColor="@color/color_62646c"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/btn_reply"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:background="@drawable/bg_press"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/ic_reply"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xs"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textColor="@color/color_4d4d4d"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_c8c8ce"
        android:textSize="12sp"
        android:visibility="gone"/>
</LinearLayout>